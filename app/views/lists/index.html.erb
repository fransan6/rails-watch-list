<div class="container">
  <h1 class="text-warning">Save any kind of movies</h1>
  <h3 class="mt-5">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path %>
<br><br><br>
  <% @lists.each do |list| %>
    <div class="card" style="width: 25rem;">
    <% if list.photo.attached? %>
      <%= cl_image_tag list.photo.key, class: "card-img-top rounded-top" %>
    <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
      </div>
    </div>
<br>
  <% end %>
